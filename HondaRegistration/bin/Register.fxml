	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="RegistrationController">
	<children>
		<Button layoutX="117.0" layoutY="498.0" mnemonicParsing="false"
			onAction="#register" prefHeight="25.0" prefWidth="100.0"
