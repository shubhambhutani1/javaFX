		<ButtonBar prefHeight="40.0" prefWidth="200.0" />
		<ImageView fitHeight="181.0" fitWidth="227.0"
			layoutX="137.0" layoutY="14.0" pickOnBounds="true"
			preserveRatio="true" style="-fx-opacity: 20%;">
			<image>
				<Image url="@../../../Desktop/Honda-symbol-3.jpg" />
			</image>
		</ImageView>
		<Label alignment="CENTER" layoutX="42.0" layoutY="191.0"
			prefHeight="27.0" prefWidth="417.0" style="-fx-font-weight: bold;"
			text="Welcome to Honda Customer Registration Portal"
			textAlignment="CENTER">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Label alignment="CENTER" contentDisplay="CENTER"
			layoutX="103.0" layoutY="176.0" prefHeight="108.0" prefWidth="294.0"
			text="*Please fill in the details" textFill="#ff2600">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Label alignment="CENTER_RIGHT" contentDisplay="CENTER"
			layoutX="33.0" layoutY="250.0" prefHeight="40.0" prefWidth="167.0"
			text="Buyer's name:">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Label alignment="CENTER_RIGHT" contentDisplay="CENTER"
			layoutX="33.0" layoutY="290.0" prefHeight="40.0" prefWidth="167.0"
			text="Date of purchase:">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Label alignment="CENTER_RIGHT" contentDisplay="CENTER"
			layoutX="33.0" layoutY="330.0" prefHeight="40.0" prefWidth="167.0"
			text="Model name:">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Label alignment="CENTER_RIGHT" contentDisplay="CENTER"
			layoutX="31.0" layoutY="369.0" prefHeight="40.0" prefWidth="167.0"
			text="Chasis Number:">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Label alignment="CENTER_RIGHT" contentDisplay="CENTER"
			layoutX="31.0" layoutY="412.0" prefHeight="40.0" prefWidth="167.0"
			text="City of registration:">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<TextField fx:id="buyerName" layoutX="241.0" layoutY="262.0"
			prefHeight="25.0" prefWidth="211.0" promptText="Full Name" />
		<TextField fx:id="chasisNumber" layoutX="241.0"
			layoutY="377.0" prefHeight="25.0" prefWidth="211.0"
			promptText="16-digit chasis number" />
		<DatePicker fx:id="dateOfPurchase" layoutX="241.0"
			layoutY="298.0" prefHeight="25.0" prefWidth="211.0"
			promptText="Date of invoice" />
		<ChoiceBox fx:id="modelName" layoutX="241.0" layoutY="338.0"
			prefHeight="25.0" prefWidth="211.0" />
		<ChoiceBox fx:id="cityOfRegistration" layoutX="241.0"
			layoutY="420.0" prefHeight="25.0" prefWidth="211.0" />
	</children>
</AnchorPane>
